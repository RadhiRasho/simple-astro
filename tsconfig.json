{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"verbatimModuleSyntax": true,
		"baseUrl": ".",
		"exactOptionalPropertyTypes": false,
		"paths": {
			"@/*": ["src/*"]
		},
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		]
	},
	"exclude": ["node_modules", "dist"]
}
