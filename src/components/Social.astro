---
const { platform, username, description } = Astro.props;
---

{description}
<a
    target="_blank"
    href={`https://www.${platform}.com/${platform === "LinkedIn" ? "/in/" + username : username}`}
    >{platform}</a
>

<style>
    a {
        padding: 0.5rem 1rem;
        color: white;
        background-color: #9a5cd0;
        border: white 1px solid;
        text-decoration: none;
    }

    a:hover {
        background-color: #7e3cb8;
    }
</style>
