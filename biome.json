{
	"$schema": "node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"globals": ["Astro"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"recommended": true
			},
			"style": {
				"recommended": true
			}
		}
	},
	"formatter": {
		"enabled": true,
		"ignore": ["**/node_modules/**", "**/dist/**", "**/*.astro"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "master",
		"useIgnoreFile": true
	}
}
